{
    "manifest_version": 3,
    "name": "Chrome Color Changer",
    "version": "1.0",
    "description": "Change the color of your Chrome browser with a simple click!",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["scripting", "activeTab"],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "host_permissions": ["<all_urls>"]

  }